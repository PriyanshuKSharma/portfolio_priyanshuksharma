<section id="projects" class="projects-section">
  <h2>Projects</h2>
  <div class="projects-grid">
    <% projects.forEach(project => { %>
      <div class="project-card terminal">
        <div class="terminal-header">
          <div class="terminal-buttons">
            <span class="btn-close"></span>
            <span class="btn-minimize"></span>
            <span class="btn-maximize"></span>
          </div>
          <div class="terminal-title">~/projects/<%= project.title.toLowerCase().replace(/\s+/g, '-') %></div>
        </div>
        <div class="terminal-body">
          <div class="terminal-line"><span class="prompt">$</span> cat README.md</div>
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
          <div class="terminal-line"><span class="prompt">$</span> ls technologies/</div>
          <div class="project-tags">
            <% project.tags.forEach(tag => { %>
              <span class="tag"><%= tag %></span>
            <% }) %>
          </div>
          <div class="terminal-line"><span class="prompt">$</span> open links</div>
          <div class="project-links">
            <a href="<%= project.github %>" target="_blank">GitHub</a>
            <% if (project.demo) { %>
              <a href="<%= project.demo %>" target="_blank">Demo</a>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

